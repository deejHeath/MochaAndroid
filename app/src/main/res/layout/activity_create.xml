<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:background="@android:color/white"
    tools:context=".CreateActivity">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:padding="0sp"
        android:scrollbarSize="25sp"
        android:layout_alignParentTop="true" >

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="700dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textView0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:backgroundTint="@color/white"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="-Points-" />

        <Button
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView0"
            app:layout_constraintTop_toBottomOf="@+id/textView0"
            android:textAllCaps="false"
            android:backgroundTint="#ffffff"
            android:textColor="#0000ff"
            android:textSize="12dp"
            android:text="Create or move POINTS" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button0"
            app:layout_constraintTop_toBottomOf="@+id/button0"
            android:textAllCaps="false"
            android:backgroundTint="#ffffff"
            android:textColor="#0000ff"
            android:textSize="12dp"
            android:text="Midpoint between 2 POINTS" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button1"
            app:layout_constraintTop_toBottomOf="@+id/button1"
            android:textAllCaps="false"
            android:backgroundTint="#ffffff"
            android:textColor="#0000ff"
            android:textSize="12dp"
            android:text="Intersection between 2 OBJECTS" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button2"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            android:textAllCaps="false"
            android:backgroundTint="#ffffff"
            android:textColor="#0000ff"
            android:textSize="12dp"
            android:text="Fold POINT over LINE" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button3"
            app:layout_constraintTop_toBottomOf="@+id/button3"
            android:textAllCaps="false"
            android:backgroundTint="#ffffff"
            android:textColor="#0000ff"
            android:textSize="12dp"
            android:text="Invert POINT in CIRCLE" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/button4"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="-Lines-" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            android:textAllCaps="false"
            android:backgroundTint="#ffffff"
            android:textColor="#0000ff"
            android:textSize="12dp"
            android:text="Segment on 2 POINTS" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button5"
            android:textAllCaps="false"
            android:backgroundTint="#ffffff"
            android:textColor="#0000ff"
            android:textSize="12dp"
            android:text="Ray on 2 POINTS" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button6"
            app:layout_constraintTop_toBottomOf="@+id/button6"
            android:textAllCaps="false"
            android:backgroundTint="#ffffff"
            android:textColor="#0000ff"
            android:textSize="12dp"
            android:text="Line on 2 POINTS" />

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button7"
            app:layout_constraintTop_toBottomOf="@+id/button7"
            android:textAllCaps="false"
            android:backgroundTint="#ffffff"
            android:textColor="#0000ff"
            android:textSize="12dp"
            android:text="Line on POINT and âŸ‚ to LINE" />

        <Button
            android:id="@+id/button9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button8"
            app:layout_constraintTop_toBottomOf="@+id/button8"
            android:textAllCaps="false"
            android:backgroundTint="#ffffff"
            android:textColor="#0000ff"
            android:textSize="12dp"
            android:text="Line on POINT and || to LINE" />

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button9"
            app:layout_constraintTop_toBottomOf="@+id/button9"
            android:textAllCaps="false"
            android:backgroundTint="#ffffff"
            android:textColor="#0000ff"
            android:textSize="12dp"
            android:text="Bisector from 2 LINES" />

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button10"
            app:layout_constraintTop_toBottomOf="@+id/button10"
            android:textAllCaps="false"
            android:backgroundTint="#ffffff"
            android:textColor="#0000ff"
            android:textSize="12dp"
            android:text="Beloch fold from 2 POINTS to 2 LINES" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button11"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/button11"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000000"
            android:text="-Circles-" />

        <Button
            android:id="@+id/button12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:textAllCaps="false"
            android:backgroundTint="#ffffff"
            android:textColor="#0000ff"
            android:textSize="12dp"
            android:text="Circle with center POINT and POINT on" />

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button12"
            app:layout_constraintTop_toBottomOf="@+id/button12"
            android:textAllCaps="false"
            android:backgroundTint="#ffffff"
            android:textColor="#0000ff"
            android:textSize="12dp"
            android:text="Three POINT circle" />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>